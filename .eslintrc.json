{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "plugins": [
        "css-modules",
        "jest"
      ],
    "extends": [
        "airbnb-base",
        "plugin:css-modules/recommended",
        "eslint:recommended", 
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
          "error",
          "LabeledStatement",
          "WithStatement"
        ],
        "linebreak-style": ["error", "windows"]
      }
}

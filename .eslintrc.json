{
    "env": {
        "browser": true,
        "es2021": true,
        "test": {
          "presets": [[
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }            
          ]]
        }
    },
    "plugins": [
        "css-modules"
      ],
    "extends": [
        "airbnb-base",
        "plugin:css-modules/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
          "error",
          "LabeledStatement",
          "WithStatement"
        ],
        "linebreak-style": ["error", "windows"]
      }
}
